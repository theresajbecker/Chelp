%head
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
  %title= "Chelp"
  %meta{:content => content_for?(:description) ? yield(:description) : "Chelp", :name => "Yelp for Charities"}
  = stylesheet_link_tag :application, :media => "all"
  = javascript_include_tag :application
  = csrf_meta_tags
  = yield(:head)
%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    %nav.navbar-inner
      .container
      -# =image_tag asset_path('ChelpIcon.png'), :size => '40x40'
      %a.myTestType{:href => "/charities"} Chelp
      %ul.nav.pull-right
        - if session[:user] != nil
          %img.img-circle.verticalGoogle{:src => current_user_picture(30)}
          %a.space-right{:href => user_path(session[:user])} #{current_user.first_name}
          %a.space-right{:href => "/logout"} Logout
          %a.space-right{:href => "/messages/new"} Contact Us
        - else
          %a.space-right{:href => "/login"} Login
          %a.space-right{:href => "/messages/new"} Contact Us
          %a.zocial.google.space-right.pad-top{:href => "/auth/google_oauth2"} Sign in with Google
  #main{:role => "main"}
    -#.container
    -#.content
    -#.row
    .span12
      = render 'layouts/messages'
      = yield
%footer